<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_reminder_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="AUG"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:id="@+id/txt_reminder_week_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="MON"
            android:paddingLeft="5dp"
            android:layout_below="@+id/txt_reminder_month"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:id="@+id/txt_reminder_date"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_reminder_week_day"
            android:text="88"
            android:textSize="40dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/txt_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="TIME"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/txt_reminder_date"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_reminder"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/remainder2"
            android:layout_toRightOf="@+id/txt_event_time"

            />

    </RelativeLayout>

</LinearLayout>