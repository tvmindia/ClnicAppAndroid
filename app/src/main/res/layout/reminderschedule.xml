<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/txt_reminder_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUG"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txt_reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reminder_month"
            android:text="88"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/txt_reminder_week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_reminder_date"
            android:textColor="@color/colorPrimaryDark"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/txt_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="TIME"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:id="@+id/image_reminder"
            android:src="@drawable/remainder2"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



</LinearLayout>